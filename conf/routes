# Routes
# This file defines all application routes (Higher priority routes first)
#
# ~~~~

# Single endpoint for serving AngularJS
GET           /                    controllers.Application.index

# Health check
GET           /health              controllers.Application.health

# User management API
GET           /users/:id           controllers.UserController.findUser(id: Long)
GET           /users               controllers.UserController.findAllUsers
POST          /users               controllers.UserController.insertUser
DELETE        /users/:id           controllers.UserController.removeUser(id: Long)
PUT           /users/:id           controllers.UserController.updateUser(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)