# Routes
# This file defines all application routes (Higher priority routes first)
#
# ~~~~

# Single endpoint for serving AngularJS
GET           /                    controllers.Application.index

# Health check
GET           /health                    controllers.Application.health

# User management API
POST          /user                controllers.UserController.create
GET           /users/:id           controllers.UserController.read(id: Long)
PUT           /users/:id           controllers.UserController.update(id: Long)
DELETE        /users/:id           controllers.UserController.delete(id: Long)
GET           /users               controllers.UserController.findAll

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)
